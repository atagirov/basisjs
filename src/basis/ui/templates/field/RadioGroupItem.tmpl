
  <b:define name="selected" type="bool"/>
  <b:define name="disabled" type="bool"/>

  <label class="Basis-RadioGroup-Item {selected} {disabled}" event-click="select"> 
    <input{field|focus} type="radio" class="native-type-radio"
       name="{name}"
       value="{value}"
       disabled="{disabled}"
       checked="{checked}"
       event-focus="focus"
       event-blur="blur"
    />
    <span{content}>{title}</span>
  </label>
